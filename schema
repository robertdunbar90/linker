DROP TABLE IF EXISTS Actors;
DROP TABLE IF EXISTS ActorFilm;
DROP TABLE IF EXISTS Films;


CREATE TABLE Actors(
	id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
	name TEXT NOT NULL,
	link TEXT NOT NULL
);

CREATE TABLE ActorFilm(
	id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
	actor_id INTEGER NOT NULL,
	film_id INTEGER NOT NULL
);

CREATE TABLE Films(
	id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
	name TEXT NOT NULL,
	link TEXT NOT NULL
);